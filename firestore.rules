rules_version = '2';

service cloud.firestore {
	match /{allPaths=**} {
    allow read, write: if request.auth.uid == 'tTqp4XUey6Ph0RtH56ljTghw3vL2' // this is my UID
  }
  
  match /databases/{database}/documents {
    match /v1_bytes/{tech_blog} {
      allow read: if resource.data.isPublished == true;
    }

    match /v1_byte_series/{byte_series} {
      allow read: if true;
    }

    match /v1_nibbles/{recipe} {
      allow read: if resource.data.isPublished == true;
    }
  }
}